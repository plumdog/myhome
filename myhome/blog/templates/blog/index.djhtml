{% extends 'base.djhtml' %}

{% block body %}

<h1>Blog</h1>

{% if blog_posts %}
  <div class="blog-posts">
    {% for bp in blog_posts %}
      <p><a href="{% url 'blog:post' bp.id %}">{{ bp.title }}</a>({{ bp.datetime }})</p>
    {% endfor %}
  </div>
{% else %}
  <p>No Items</p>
{% endif %}
{% endblock %}
